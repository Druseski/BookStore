@model IEnumerable<BookStore.Entities.Publisher>

<div class="container">
    <h1>Publisher</h1>
    <div class="row mt-2">
        <div class="col-12 mb-1">
            <a asp-action="Create" class="btn btn-success " style="float:right">
                <i class="fas fa-plus"></i> &nbsp; Create
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="row"> ID </th>
                    <th scope="row"> Name</th>
                    <th scope="row">Country </th>
                    <th scope="row"> Year</th>
                    <th scope="row" colspan="3" class="text-center">Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var publisher in Model)
                {
                    <tr>
                        <td scope="row"> @Html.DisplayFor(modelItem => publisher.ID)</td>
                        <td> @Html.DisplayFor(modelItem => publisher.Name)</td>
                        <td> @Html.DisplayFor(modelItem => publisher.Country)</td>
                        <td> @Html.DisplayFor(modelItem => publisher.Year) </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@publisher.ID" class="btn btn-primary ">
                                <i class="fas fa-edit" &nbps></i> &nbsp; Edit
                            </a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@publisher.ID" class="btn btn-info">
                                <i class="fas fa-info"></i> &nbsp;Details
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@publisher.ID" class="btn btn-danger">
                                <i class="fas fa-trash"></i> &nbsp;Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>