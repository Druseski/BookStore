@model IEnumerable<BookStore.Entities.Book>

<div class="container">
    <h1>Book</h1>
    <div class="row mt-2">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-success " style="float:right">
                <i class="fas fa-plus"></i> &nbsp; Create
            </a>
        </div>
    </div>
</div>
<div class="container">
    <h3>All Books</h3>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title </th>
                    <th scope="col"> Author</th>
                    <th scope="col"> Year Of Issue </th>
                    <th scope="col"> Publisher </th>
                    <th scope="col"> Category</th>
                    <th scope="col" colspan="3" class="text-center" > Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td scope="row"> @Html.DisplayFor(modelItem => book.Title)</td>
                        <td > @Html.DisplayFor(modelItem => book.AuthorName) </td>
                        <td > @Html.DisplayFor(modelItem => book.YearOfIssue)</td>
                        <td > @Html.DisplayFor(modelItem => book.PublisherName) </td>
                        <td > @Html.DisplayFor(modelItem => book.CategoryName) </td>
                        <td >
                            <a asp-action="Edit" asp-route-id="@book.ID" class="btn btn-primary ">
                                <i class="fas fa-edit" &nbps></i> &nbsp; Edit
                            </a>
                        </td>
                        <td >
                            <a asp-action="Details" asp-route-id="@book.ID" class="btn btn-info">
                                <i class="fas fa-info"></i> &nbsp;Details
                            </a>
                        </td >
                        @if (ViewContext.HttpContext.User.IsInRole("admin"))
                        {
                            <td >
                                <a asp-action="Delete" asp-route-id="@book.ID" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> &nbsp;Delete
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
