@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="container">
    <h2> User </h2>
    <hr />
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                
                <th colspan="3" class="text-center">
                    <a asp-action="Create" class="btn btn-block btn-success">
                        <i class="fas fa-user"> </i> &nbsp; User</a>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (Microsoft.AspNetCore.Identity.IdentityUser user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary ">
                            <i class="fas fa-edit" &nbps></i> &nbsp; Edit
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">
                            <i class="fas fa-info"></i> &nbsp;Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> &nbsp;Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

