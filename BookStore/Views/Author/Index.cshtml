@model IEnumerable<BookStore.Entities.Author>

<div class="container">
    <h1>Author</h1>

    <div class="row mt-2">
        <div class="col-12 mb-1">
            <a asp-action="Create" class="btn btn-success " style="float:right">
                <i class="fas fa-plus"></i> &nbsp; Create
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Country</th>
                    <th scope="col">DateBirth</th>
                    <th scope="col">ShortDiscription</th>
                    <th scope="col">Language</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Popularity</th>
                    <th scope="col" colspan="3" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <td scope="row"> @Html.DisplayFor(modelItem => author.ID)</td>
                        <td> @Html.DisplayFor(modelItem => author.Name)</td>
                        <td> @Html.DisplayFor(modelItem => author.Country)</td>
                        <td> @Html.DisplayFor(modelItem => author.DateBirth)</td>
                        <td> @Html.DisplayFor(modelItem => author.ShortDiscription) </td>
                        <td> @Html.DisplayFor(modelItem => author.Language)</td>
                        <td> @Html.DisplayFor(modelItem => author.Gender)</td>
                        <td> @Html.DisplayFor(modelItem => author.Popularity)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@author.ID" class="btn btn-primary ">
                                <i class="fas fa-edit" &nbps></i> &nbsp; Edit
                            </a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@author.ID" class="btn btn-info">
                                <i class="fas fa-info"></i> &nbsp;Details
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@author.ID" class="btn btn-danger">
                                <i class="fas fa-trash"></i> &nbsp;Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>